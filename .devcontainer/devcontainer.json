{
  "name": "CUDA Development",
  "image": "mcr.microsoft.com/vscode/devcontainers/cuda:11.2-cudnn8-devel-ubuntu20.04",
  "runArgs": ["--gpus", "all"],
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "extensions": [
    "ms-vscode.cpptools",
    "ms-vscode.cmake-tools"
  ],
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y build-essential"
}
